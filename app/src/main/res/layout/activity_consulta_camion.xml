<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/s"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context="com.example.furgoficina.ConsultaCamionActivity">


    <Button
        android:id="@+id/bCambiarCambioCamion2"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginStart="225dp"
        android:layout_marginTop="30dp"
        android:onClick="volver"
        android:text="@string/bConsultar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slCambiarCamion2"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/textConsultaCamion2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:text="@string/text2ConsultaConductor"
        android:textColor="#0C0C0C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textMatriculaCons2Camion" />

    <TextView
        android:id="@+id/textConsultaCamion1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:text="@string/textConsultaCamion"
        android:textColor="#0C0C0C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/immatriculaCambiar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/textDni"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textConsultaCamion1"
        app:srcCompat="@mipmap/camionred" />

    <ScrollView
        android:id="@+id/slCambiarCamion2"
        android:layout_width="406dp"
        android:layout_height="350dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textConsultaCamion2">

        <LinearLayout
            android:id="@+id/Linearlayout1ConsultaCamion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imExtintorCambCamion"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contentDescription="@string/listExtintor"
                    android:focusable="true"
                    app:srcCompat="@mipmap/extintor"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/dateExtintorCons2Camion"
                    android:layout_width="340dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="16dp"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="date"
                    android:minHeight="48dp"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textMatricula"
                    tools:ignore="TextContrastCheck,SpeakableTextPresentCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imTacConsCamion"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contentDescription="@string/listRevTac"
                    android:focusable="true"
                    app:srcCompat="@mipmap/tacografored3"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/dateRevTacografoCons2Camion"
                    android:layout_width="340dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="date"
                    android:minHeight="48dp"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dateExtintorCons2Camion"
                    tools:ignore="TextContrastCheck,SpeakableTextPresentCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imItvCambCamion"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contentDescription="@string/listItv"
                    android:focusable="true"
                    app:srcCompat="@mipmap/itvred"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/dateItvCons2Camion"
                    android:layout_width="340dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="date"
                    android:minHeight="48dp"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dateRevTacografoCons2Camion"
                    tools:ignore="TextContrastCheck,SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imPaqueteCambCamion"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contentDescription="@string/listSegMerc"
                    android:focusable="true"
                    app:srcCompat="@mipmap/paquete2red"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/dateSegMercanciasCons2Camion"
                    android:layout_width="340dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="date"
                    android:minHeight="48dp"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dateItvCons2Camion"
                    tools:ignore="TextContrastCheck,SpeakableTextPresentCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imSeguroCambCamion"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contentDescription="@string/listSegVehic"
                    android:focusable="true"
                    app:srcCompat="@mipmap/segurocoche2red"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/dateSegVehiculoCons2Camion"
                    android:layout_width="340dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="date"
                    android:minHeight="48dp"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dateSegMercanciasCons2Camion"
                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imRuedasCambCamion"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contentDescription="@string/listRuedas"
                    android:focusable="true"
                    app:srcCompat="@mipmap/ruedasred2" />

                <TextView
                    android:id="@+id/dateRuedasCons2Camion"
                    android:layout_width="340dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="date"
                    android:minHeight="48dp"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dateSegVehiculoCons2Camion"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imPastillasConsCamion"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contentDescription="@string/listPastillas"
                    android:focusable="true"
                    app:srcCompat="@mipmap/frenodediscored" />

                <TextView
                    android:id="@+id/datePastillasCons2Camion"
                    android:layout_width="340dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="date"
                    android:minHeight="48dp"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dateRuedasCons2Camion"
                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imPermCirculacionCambCamion"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contentDescription="@string/listPermisoCirculacion"
                    android:focusable="true"
                    app:srcCompat="@mipmap/pngeggred" />

                <TextView
                    android:id="@+id/datePermCirculacionCons2Camion"
                    android:layout_width="340dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="date"
                    android:minHeight="48dp"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/datePastillasCons2Camion" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imReparacionCambCamion"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contentDescription="@string/listReparacion"
                    android:focusable="true"
                    app:srcCompat="@mipmap/averia2red" />

                <TextView
                    android:id="@+id/dateUltReparacionCons2Camion"
                    android:layout_width="340dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="date"
                    android:minHeight="48dp"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/datePermCirculacionCons2Camion" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imKilometrosCambCamion"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contentDescription="@string/textKm"
                    android:focusable="true"
                    app:srcCompat="@mipmap/kilometrosred" />

                <TextView
                    android:id="@+id/textkilometrosCons2Camion"
                    android:layout_width="340dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:focusable="auto"
                    android:inputType="numberSigned"
                    android:minHeight="48dp"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dateUltReparacionCons2Camion" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


        <EditText
        android:id="@+id/textMatriculaCons2Camion"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintStart_toEndOf="@+id/immatriculaCambiar"
        app:layout_constraintTop_toBottomOf="@+id/textConsultaCamion1"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/bVolverCambioCamion"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:onClick="volver"
        android:text="@string/botVolver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slCambiarCamion2"
        tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>